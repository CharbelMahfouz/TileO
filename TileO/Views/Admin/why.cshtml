
@{
    ViewBag.Title = "Admin | Home Why";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<HomeWhy> AllHomeWhy = (List<HomeWhy>)ViewBag.HomeWhy;
}
@model Home
<style>
    .PanelClass {
        padding-left: 15%;
        padding-right: 15%;
    }

    .LabelImage {
        margin-left: 4%;
        font-weight: bold;
        font-size: 15px !important;
        text-transform: capitalize;
    }
</style>



<div class="content">
    <div class="container-fluid">
        <div class="page-header">
            <h4 class="page-title">Why</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="/Admin/why">
                        <i class="flaticon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="/Admin/why">Home Page || Why</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12" style="padding:0 15% !important">
                <div class="card">

                    <form id="exampleValidation" enctype="multipart/form-data" method="post">
                        <input hidden value="0" name="Id" />
                        <div class="card-body">

                            <div class="form-group form-show-validation row">
                                <label for="WhyTitle" class="col-md-3 col-sm-4 mt-sm-2 ">Title <span class="required-label">*</span></label>
                                <div class="col-md-9 col-sm-8">
                                    <input type="text" maxlength="125" value="@Model.WhyTitle" class="form-control" id="WhyTitle" name="WhyTitle" placeholder="Enter Title" required>
                                </div>
                            </div>

                            
                            <div class="form-group form-show-validation row">
                                <label for="WhyDescription" class="col-md-3 col-sm-4 mt-sm-2 ">Description <span class="required-label">*</span></label>
                                <div class="col-md-9 col-sm-8">
                                    <textarea id="summernote" class="form-control" required name="WhyDescription">@Model.WhyDescription</textarea>
                                </div>
                            </div>


                            <div class="card-action">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="BtnSaveIndustry btn btn-primary float-right">Save</div>

                                    </div>
                                </div>
                            </div>


                        </div>

                        

                    </form>
                </div>

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-4">
                                <h4 class="card-title">Why Inhealth</h4>
                            </div>
                            <div class="col-md-8" style="float:right">
                                <button onclick="window.location.href = '/admin/createhomewhy/'" class="BtnCreateManager btn btn-primary" style="float:right" type="button">
                                    Add Why
                                </button>
                            </div>
                        </div>

                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table-bordered table sideScroll">
                                <thead>
                                    <tr>
                                        <th>ID</th>

                                        <th>Title</th>
                                        <th>Icon</th>
                                        <th>Action</th>


                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in AllHomeWhy.OrderBy(x => x.Id))
                                    {


                                        <tr AdID='@item.Id' style="text-align:center">
                                            <th>@item.Id</th>
                                            <th>@item.Title</th>
                                            <td style="text-align:center;"><img style="width: 150px;margin-left: 2%;background-color: tan" src="/uploads/@item.Icon" /></td>

                                            <th>
                                                <div class="btn-group dropleft">
                                                    <button type="button" class="btn btn-default btn-border dropdown-toggle" style="padding:6px !important;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        Action
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu" x-placement="left-start" style="position: absolute; transform: translate3d(-2px, 0px, 0px); top: 0px; left: 0px; will-change: transform;">
                                                        <li><a AdID='@item.Id' onclick="window.location.href='/admin/edithomewhy/@item.Id'" class='dropdown-item ViewAd'>View</a></li>
                                                        <li><a AdID='@item.Id' class='dropdown-item DeleteCurrentItem'>Delete</a></li>
                                                    </ul>
                                                </div>
                                            </th>
                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>



                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


